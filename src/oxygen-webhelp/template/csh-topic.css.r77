/*
 OL counter for callout_continue
*/
div.wh_content_area {
  counter-reset: callout-counter;
}

/*들여쓰기 수정*/
ol {
  display: block;
  margin-block-start: 1em;
  margin-block-end: 1em;
  margin-inline-start: 8px;
}
ol.callout_continue {
	list-style: none;
	counter-reset: none;
}

ol.callout li, ol.callout_continue li {
	counter-increment: callout-counter;
}
@supports (-webkit-touch-callout: none) {
	ol.callout_continue li:before {
	  content: counter(callout-counter) ". ";
	  position: absolute;
	  width: 1.5em;
	  left: 1em;
	  text-align: right;
	}
	ol.callout_continue {
		/*padding-left: 1.14em;*/
	}	
}

@supports not (-webkit-touch-callout: none) {
	ol.callout_continue li::marker {
	  content: counter(callout-counter) ". ";
	}
}
